<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<!-- Report template for Course detail -->
	<template id="report_course_detail">
		<t t-call="web.html_container">
			<t t-foreach="docs" t-as="o">
				<t t-call="web.internal_layout">
					<div class="page">
						<div class="oe_structure" />
						<div class="row">
							<div class="col-7">
								<h5>
									<span t-field="o.name" />
								</h5>
							</div>
							<div class="col-7">
								<h6>
									<span t-field="o.description" />
								</h6>
							</div>
						</div>
						<table class="table table-sm">
							<thead>
								<tr>
									<th>Lesson</th>
									<th>Room</th>
									<th>Attendee</th>
									<th>Instructor</th>
								</tr>
							</thead>
							<tbody>
								<tr t-foreach="o.course_line_ids" t-as="course_line">
									<tr t-foreach="course_line.lesson_id.lesson_line_ids"
										t-as="lesson_line">
										<td>
											<span t-field="course_line.lesson_id" />
										</td>
										<td>
											<span t-field="course_line.lesson_id.room_id" />
										</td>
										<td>
											<span t-field="lesson_line.partner_id" />
										</td>
										<td>
											<span t-field="lesson_line.instructor_id" />
										</td>
									</tr>
								</tr>
							</tbody>
						</table>
					</div>
				</t>
			</t>
		</t>
	</template>
</odoo>
